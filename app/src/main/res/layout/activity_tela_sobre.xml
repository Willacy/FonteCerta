<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TelaSobre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@color/black"
        android:backgroundTint="#737373"
        android:orientation="vertical">

        <!-- Layout Logo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#191919"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/logo_ant" />
        </LinearLayout>

        <!-- Layout Sobre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5c191919"
            android:orientation="vertical">

            <!-- Titulo da pagina -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/contax"
                android:minWidth="300dp"
                android:shadowColor="#fff"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="15"
                android:text="SOBRE"
                android:textAlignment="center"
                android:textColor="#191919"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Texto sobre o sistema -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="377dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/contax"
                android:minWidth="300dp"
                android:text="Nome: Fonte Certa – Sistema de Cálculo de Fonte Ideal.\nVersão: 1.0.0.\nDescrição:\nO Fonte Certa é um sistema desenvolvido para auxiliar na escolha
da fonte de alimentação ideal para dispositivos eletrônicos. Com base nos critérios técnicos
 e no consumo energético dos equipamentos, o sistema realiza cálculos precisos para recomendar
  a melhor fonte disponível.\nDesenvolvido por: Willacy Santana\nAno: 2025"
                android:textColor="#191919"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#5C191919"
                android:fontFamily="@font/contax"
                android:text="VOLTAR"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>